extends ../shared/layout
block main-content
    .container(ng-controller='ZenController as vm')
        .panel.panel-primary
            .panel-heading
                h3.panel-title Zen IDE
            .panel-body
            form(ng-submit='vm.submit(vm.code)')
                textarea(id="code" class="form-control" type="text" name="code" rows="7" placeholder="Your Code Here" ng-model='vm.code')
                br
                input(type="submit" class="btn btn-lg" value="Run")
            .panel.panel-primary
                .panel-heading
                    h3.panel-title Output
                .panel-body
                        span(ng-bind='vm.output')
